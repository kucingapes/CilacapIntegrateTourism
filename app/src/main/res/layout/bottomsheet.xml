<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewkosong"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewkosong"
            android:layout_marginTop="50dp"
            android:background="#ffffff"
            android:onClick="relatifbg">

            <TextView
                android:id="@+id/judulsheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="50sp"
                android:paddingBottom="5dp"
                android:paddingTop="10dp"
                android:textColor="@color/font"
                android:textStyle="bold"
                android:text="dasgsdgss"/>

            <TextView
                android:id="@+id/alamatsheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judulsheet"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:paddingBottom="5dp"
                android:textColor="@color/font"
                android:text="dfgsdg"/>

            <TextView
                android:id="@+id/desasheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alamatsheet"
                android:layout_marginLeft="10sp"
                android:textStyle="italic"
                android:layout_marginRight="10sp"
                android:paddingBottom="10dp"
                android:textColor="@color/font"
                android:text="sdfgdhdfh"/>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/arahsheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:src="@drawable/arah"
            app:layout_anchor="@id/viewkosong"
            app:layout_anchorGravity="bottom|right|end"
            app:elevation="0dp"/>

    </android.support.design.widget.CoordinatorLayout>


    <Button
        android:id="@+id/expand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/bottomsheet"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/colorAccent"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="artikel_expand"
        android:textColor="@color/fontputih"
        android:text="@string/readmore"/>

</RelativeLayout>